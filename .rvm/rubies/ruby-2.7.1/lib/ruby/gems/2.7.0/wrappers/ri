#!/usr/bin/env bash

if
  [[ -s "/home/ivar/.rvm/rubies/ruby-2.7.1/lib/ruby/gems/2.7.0/environment" ]]
then
  source "/home/ivar/.rvm/rubies/ruby-2.7.1/lib/ruby/gems/2.7.0/environment"
  exec ri "$@"
else
  echo "ERROR: Missing RVM environment file: '/home/ivar/.rvm/rubies/ruby-2.7.1/lib/ruby/gems/2.7.0/environment'" >&2
  exit 1
fi
